<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open">

    <LinearLayout
        android:layout_width="860dp"
        android:layout_height="460dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_rpbg"
        android:orientation="vertical">


        <ImageView
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:layout_marginLeft="363dp"
            android:layout_marginTop="59dp"
            android:src="@mipmap/reset_success_hook" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:layout_marginLeft="357dp"
            android:layout_marginTop="28dp"
            android:includeFontPadding="false"
            android:text="重置成功"
            android:textColor="#ff111111"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="580dp"
            android:layout_height="25dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="27dp"
            android:includeFontPadding="false"
            android:text="恭喜您，密码重置成功！您可以使用心密码登录了"
            android:textColor="#ff111111"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_rightnowlogin"
            android:layout_width="420dp"
            android:layout_height="62dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="218dp"
            android:background="@drawable/bg_login_button"
            android:text="立即登录"
            android:textColor="#ffffffff"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>