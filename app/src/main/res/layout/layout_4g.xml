<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="460dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#333333">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="177dp"
            android:layout_height="145dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="28dp"
            android:src="@mipmap/connection_error" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="29dp"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="信号异常"
            android:textColor="#ff111111"
            android:textSize="31sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:includeFontPadding="false"
            android:text="4G卡异常，请联下方电话！"
            android:textColor="#ff333333"
            android:textSize="25sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="206dp"
                android:layout_marginTop="19dp"
                android:src="@mipmap/phone2"/>
            <TextView
                android:layout_width="155dp"
                android:layout_height="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="2dp"
                android:includeFontPadding="false"
                android:text="400-6666-8888"
                android:textColor="#ff0ccecd"
                android:textSize="18sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confrim"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_login_button"
            android:paddingLeft="108dp"
            android:paddingTop="8dp"
            android:text="确认"
            android:textColor="#ffffffff"
            android:textSize="28sp" />

    </LinearLayout>
</LinearLayout>