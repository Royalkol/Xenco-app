<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open">

    <LinearLayout
        android:layout_width="860dp"
        android:layout_height="460dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_rpbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:text="忘记密码"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="354dp"
            android:textColor="#ff111111"
            android:textSize="30sp"
            android:includeFontPadding="false"/>

        <EditText
            android:id="@+id/et_trainnumber"
            android:layout_width="420dp"
            android:layout_height="62dp"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_inputbox_white"
            android:drawableLeft="@mipmap/phone"
            android:drawablePadding="12dp"
            android:hint="请输入您的培训证号"
            android:textSize="24sp"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/et_message"
            android:layout_width="420dp"
            android:layout_height="62dp"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_inputbox_white"
            android:drawableLeft="@mipmap/vfcode"
            android:drawablePadding="12dp"
            android:hint="请输入您的培训证号"
            android:paddingLeft="30dp"
            android:paddingTop="12dp"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_previous"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="220dp"
                android:background="@drawable/bg_button_bule"
                android:text="上一步"
                android:textColor="#ffffffff"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_button_green"
                android:text="下一步"
                android:textColor="#ffffffff"
                android:textSize="32sp" />
            </LinearLayout>


    </LinearLayout>
</LinearLayout>