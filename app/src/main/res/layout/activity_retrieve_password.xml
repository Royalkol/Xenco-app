<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="860dp"
        android:layout_height="460dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_rpbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:layout_marginLeft="354dp"
            android:layout_marginTop="56dp"
            android:includeFontPadding="false"
            android:text="忘记密码"
            android:textColor="#ff111111"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et_phonenumber"
            android:layout_width="420dp"
            android:layout_height="62dp"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_textview_bule"
            android:drawableLeft="@mipmap/phone_bule"
            android:drawablePadding="12dp"
            android:hint="请输入手机号"
            android:paddingLeft="30dp"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginLeft="232dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/sign_red"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:textColor="#ffea322a"
                android:textSize="21sp" />
        </LinearLayout>

        <com.example.xc_nonapplication.CustomEditTextButton
            android:id="@+id/cs_1"
            android:layout_width="420dp"
            android:layout_height="62dp"
            android:layout_marginLeft="218dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginLeft="232dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/sign_red"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:textColor="#ffea322a"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_bule"
                android:text="上一步"
                android:textColor="#ffffffff"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_green"
                android:text="下一步"
                android:textColor="#ffffffff"
                android:textSize="32sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>