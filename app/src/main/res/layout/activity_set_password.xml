<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open">

    <LinearLayout
        android:layout_width="860dp"
        android:layout_height="460dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_rpbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#333333"
            android:includeFontPadding="false"
            android:paddingLeft="216dp"
            android:paddingTop="26dp"
            android:text="该手机绑定的培训证号： 298 249 2912"
            android:textColor="#ff111111"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:layout_marginLeft="359dp"
            android:layout_marginTop="22dp"
            android:includeFontPadding="false"
            android:text="设置密码"
            android:textColor="#ff111111"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_newpassword"
                android:layout_width="420dp"
                android:layout_height="62dp"
                android:layout_marginLeft="218dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_textview_bule"
                android:drawableLeft="@mipmap/lock_gray"
                android:drawablePadding="12dp"
                android:hint="请输入密码（至少6位数）"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/cb_newps"
                android:layout_width="28dp"
                android:layout_height="13dp"
                android:layout_marginLeft="590dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/selector_eyes"
                android:button="@null"/>

            <ImageView
                android:id="@+id/iv_Sign1"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="657dp"
                android:layout_marginTop="35dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginLeft="232dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/sign_red"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:textColor="#ffea322a"
                android:textSize="21sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_confirmpassword"
                android:layout_width="420dp"
                android:layout_height="62dp"
                android:layout_marginLeft="218dp"
                android:background="@drawable/bg_textview_bule"
                android:drawableLeft="@mipmap/lock_gray"
                android:drawablePadding="12dp"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/cb_confrimps"
                android:layout_width="28dp"
                android:layout_height="13dp"
                android:layout_marginLeft="590dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector_eyes"
                android:button="@null"/>

            <ImageView
                android:id="@+id/iv_Sign2"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="657dp"
                android:layout_marginTop="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginLeft="232dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/sign_red"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:textColor="#ffea322a"
                android:textSize="21sp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_bule"
                android:text="上一步"
                android:textColor="#ffffffff"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_green"
                android:text="下一步"
                android:textColor="#ffffffff"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>